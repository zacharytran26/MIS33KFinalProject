@model IEnumerable<fa24group8finalproject.Models.PropertyReview>

@{
    ViewData["Title"] = "Dispute Review Table";
}

<h1>Disputed Reviews</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Property Name</th>
            <th>@Html.DisplayNameFor(model => model.Rating)</th>
            <th>@Html.DisplayNameFor(model => model.Review)</th>
            <th>@Html.DisplayNameFor(model => model.Dispute)</th>
            <th>@Html.DisplayNameFor(model => model.dStatus)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Property.FullAddress</td> <!-- Display the property name -->
                <td>@item.Rating</td>
                <td>@item.Review</td>
                <td>@item.Dispute</td>
                <td>
                    @if (item.dStatus == disputeStatus.inDispute)
                    {
                        <span class="text-warning">In Dispute</span>
                    }
                    else if (item.dStatus == disputeStatus.Accepted)
                    {
                        <span class="text-success">Accepted</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
